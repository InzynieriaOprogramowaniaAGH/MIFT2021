FROM node:latest

RUN	apt-get update
RUN apt-get install -y --no-install-recommends git gcc g++ make python wget ca-certificates
RUN mkdir /usr/local/share/ca-certificates/cacert.org
RUN wget -P /usr/local/share/ca-certificates/cacert.org http://www.cacert.org/certs/root.crt http://www.cacert.org/certs/class3.crt
RUN update-ca-certificates
RUN git clone https://github.com/Siluk98/deltachat-desktop.git
WORKDIR /deltachat-desktop
RUN npm install --global electron --unsafe-perm=true --allow-root
RUN npm update
RUN npm install
RUN npm run build