FROM ubuntu:latest
ENV TZ=Europe/Warsaw
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN \
	apt-get update && \
	apt-get install -y git && \
	apt-get install -y npm

RUN \
	git clone https://github.com/binhxn/node-chat-app.git && \
    cd node-chat-app && \
    npm install

